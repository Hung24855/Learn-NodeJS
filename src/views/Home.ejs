<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang chủ</title>
    <link rel="stylesheet" href="/styles/main.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <ul>
      <li><a class="active" href="/">Home</a></li>
      <li><a href="/create">Tạo user</a></li>
    </ul>
    <div class="container">
      <table class="table mt-5 table-bordered table-hover text-center">
        <tr class="table-light">
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Thao tác</th>
        </tr>
        <% for (var i = 0; i < data.length; i++) { %>
        <tr>
          <td><%= data[i].id %></td>
          <td><%= data[i].email %></td>
          <td><%= data[i].name %></td>
          <td><%= data[i].city %></td>
          <td>
            <a href="/edit/<%= data[i].id %>"
              ><button class="btn btn-primary custom-btn">Sửa</button></a
            >
            <a><button class="btn btn-primary custom-btn">Xóa</button></a>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
