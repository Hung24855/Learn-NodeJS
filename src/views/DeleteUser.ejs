<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Xóa user</title>
    <link rel="stylesheet" href="/styles/main.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/create">Tạo user</a></li>
    </ul>
    <div class="container mt-5" style="width: 400px; margin-top: 50px">
      <form action="/delete-user" method="post">
        <div class="mb-3 display-none">
          <input name="id" value="<%= data[0].id %>" />
        </div>
        <div class="mb-3">
          <label for="inputEmail" class="form-label"
            >Bạn có thực sự muốn xóa người dùng có email :
          </label>
          <input
            type="email"
            class="form-control"
            id="inputEmail"
            placeholder="Enter your email"
            required
            name="email"
            value="<%= data[0].email %>"
          />
        </div>
        <button type="submit" class="btn btn-primary">Xác nhận</button>
      </form>
    </div>
  </body>
</html>
